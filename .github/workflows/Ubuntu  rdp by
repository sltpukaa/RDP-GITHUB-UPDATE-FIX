name: UBUNTU 20.04

# Controls when the workflow will run
on:
  # Triggers the workflow on push or pull request events but only for the main branch
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

  # Allows you to run this workflow manually from the Actions tab
  workflow_dispatch:

# A workflow run is made up of one or more jobs that can run sequentially or in parallel
jobs:
  # This workflow contains a single job called "build"
  build:
    # The type of runner that the job will run on
    runs-on: ubuntu-20.04

    # Steps represent a sequence of tasks that will be executed as part of the job
    steps:
      # Checks-out your repository under $GITHUB_WORKSPACE, so your job can access it
      - uses: actions/checkout@v2
      
      - nane: Update
      run: sudo apt update

      # Runs a single command using the runners shell
      - name: Instalando o ubuntu desktop
        run: |
        sudo useradd -m expedito && sudo adduser expedit sudo && echo 'expedito:expedit' | sudo chpasswd
        
        sudo apt install ubuntu-desktop xfce4 xrdp -y

      # Runs a set of commands using the runners shell
      - name: Configurando tudo
        run: |
         sudo wget https://bin.equinox.io/c/4VmDzA7iaHb/ngrok-stable-linux-amd64.zip
         unzip ngrok-stable-linux-amd64.zip
         echo xfce4-session >~/.xsession
         sudo service xrdp start
         sudo ./ngrok authtoken "${{ secrets.NGROK_AUTH_TOKEN }}"
         
         - name: Abrindo Porta 3389
         run: |
         sudo ./ngrok tcp 3389
